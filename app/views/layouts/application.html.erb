<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/head' %>
</head>
<body>
  <%# pipe breakpoints to javascript %>
  <div id="js__media-check"></div>

  <div id="flash">
    <div class="notice"><%= notice %></div>
    <div class="alert"><%= alert %></div>
  </div>

  <% if user_signed_in? %>
    <div id="current_user">
      Signed in as <%= current_user.email %>. <%= link_to 'Sign out', destroy_user_session_path %>
    </div>
  <% end %>

  <div id="yield">
    <%= yield %>
  </div>

  <%= javascript_include_tag :application %>
</body>
</html>
