
<div class="pages">

  <a class="pages__create-btn" href='<%= new_admin_brand_guide_path %>'>Create Brand Guide</a>

  <div class="pages__list">

    <ul style="text-align: left;">
      <% pages.each do |page| %>
        <li>
          <%= link_to page.title, edit_admin_brand_guide_page_path(@brand_guide, page) %>
          <%= render 'sections', page: page, sections: page.children %>
        </li>
      <% end %>
    </ul>

  </div>

</div>