<h1><%= @brand_guide.title %></h1>

<%= simple_form_for [:admin, @brand_guide] do |f| %>
  
  <%= f.error_notification %>
  
  <%= f.input :title %>
  <%= f.input :password, as: :string %>

  <code><%= link_to brand_guide_url(@brand_guide, subdomain: @brand_guide.slug), brand_guide_url(@brand_guide, subdomain: @brand_guide.slug) %></code>

  <div class="buttons">
    <%= f.button :submit, 'Save Changes' %>
  </div>

<% end %>


<div class="editor">

  <div class="editor__tree">
    <%= render 'pages', pages: @brand_guide.pages %>
  </div>

  <div class="editor__content">
    <%= render 'content', pages: @brand_guide.pages %>
  </div>

</div>



<div class="guides__footer">

  <a class="guides__delete" href="<%=admin_brand_guide_path(@brand_guide)%>" data-method="delete" data-confirm='Are you sure you want to delete this brandguide?'>Delete</a>

</div>