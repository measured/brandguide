<h1>Edit <%= @brand_guide.title %></h1>

<%= simple_form_for [:admin, @brand_guide] do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>

  <code><%= link_to brand_guide_url(@brand_guide, subdomain: @brand_guide.slug), brand_guide_url(@brand_guide, subdomain: @brand_guide.slug) %></code>

  <%= render 'sections', sections: @brand_guide.sections.roots %>

  <%= link_to 'Add Section', new_admin_brand_guide_section_path(@brand_guide) %>

  <div class="buttons">
    <%= f.button :submit, 'Save Changes' %>
    <%= link_to 'Delete', admin_brand_guide_path(@brand_guide), method: :delete, confirm: 'Are you sure?' %>
  </div>
<% end %>

<%= link_to 'Back to Dashboard', admin_root_path %>