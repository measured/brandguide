<h1>Edit <%= @brand_guide.title %></h1>

<%= simple_form_for [:admin, @brand_guide] do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :subdomain %>

  Sections

  <ul class="sections--order" data-sort-path="<%= admin_brand_guide_sort_path(@brand_guide) %>">
    <% @brand_guide.sections.each do |section| %>
      <li data-id="<%= section.id %>"><%= link_to section.title, [:edit, :admin, @brand_guide, section] %></li>
    <% end %>
  </ul>

  <%= f.button :submit, 'Save Changes' %>
  <%= link_to 'Delete', admin_brand_guide_path(@brand_guide), method: :delete, confirm: 'Are you sure?' %>
<% end %>

<%= link_to 'Back to Dashboard', admin_root_path %>