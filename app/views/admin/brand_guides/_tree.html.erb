
<div class="pages">


  <div class="pages__list">

    <ul>
      <% pages.each do |page| %>
        <li>
          <%= link_to page.title, edit_admin_brand_guide_page_path(@brand_guide, page) %>
          <%= render 'tree_sections', page: page, sections: page.children %>
        </li>
      <% end %>

      <li><a class="pages__create-btn" href='<%= new_admin_brand_guide_page_path(@brand_guide) %>'>+ add page</a></li>
    </ul>

  </div>

</div>